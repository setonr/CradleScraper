<h2>Top Headlines</h2>

<p><a class="btn btn-primary btn-lg" href="/scrape" role="button">Collect headlines!</a></p>

{{#each articles}}
  <div class="row">
    <div class="col-sm-12 articleBox">
      <h2 class="articleTitle" id="{{this._id}}">{{this.title}}</h2>
      <h3><a class="articleLink" href={{this.link}}>{{this.link}}</a></h3>
      <button id="{{this._id}}" class="btn saveArticle" type="submit">Save this</button>
    </div>
  </div>
{{/each}}
